<?xml version="1.0" encoding="utf-8"?>
<web-app
        version="2.5"
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>apiaiendpoint</servlet-name>
		<servlet-class>com.balda.apiai.DummyApiAiServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>authendpoint</servlet-name>
		<servlet-class>com.balda.auth.DummyAuthServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>tokenendpoint</servlet-name>
		<servlet-class>com.balda.auth.DummyTokenServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>apiaiendpoint</servlet-name>
		<url-pattern>/apiaiendpoint</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>authendpoint</servlet-name>
		<url-pattern>/authendpoint</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>tokenendpoint</servlet-name>
		<url-pattern>/tokenendpoint</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>test.OfyHelper</listener-class>
	</listener>
</web-app>
